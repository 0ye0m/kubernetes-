  },
  // standard disk in west zone
  {
    "kind": "ConfigMap",
    "apiVersion": "v1",
    "metadata": {
      "name": "silver-west",
      "namespace": "kubernetes.io/provisioners",
      "labels": {
        "type": "provisioner-config",
        "storage-class": "silver",
        "zone": "us-west"
      }
    },
    "data": {
      "plugin-name": "kubernetes.io/gce-pd",
      "parameters": "{'volumeType':'hdd', 'zone':'us-west'}"
    }
  }
