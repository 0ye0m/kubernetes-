{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kube-addon-manager",
    "namespace": "kube-system",
    "version": "v1"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-addon-manager",
        "image": "REGISTRY/kube-addon-manager-ARCH:v5.1",
        "resources": {
          "requests": {
            "cpu": "5m",
            "memory": "50Mi"
          }
        },
        "volumeMounts": [
          {
            "name": "addons",
            "mountPath": "/etc/kubernetes/addons",
            "readOnly": false
          }
        ]
      }
    ],
    "volumes":[
      {
        "name": "addons",
        "hostPath":
          {
            "path": "/etc/kubernetes/addons/multinode"
          }
      }
    ]
  }
}
