apiVersion: v1
kind: Service
metadata:
  name: kubernetes-dns
  namespace: default
  labels:
    k8s-app: kube-dns
    kubernetes.io/cluster-service: "true"
    kubernetes.io/name: "KubeDNS"
  annotations:
    kubernetes.io/cluster-domain: {{ pillar['dns_domain'] }}
spec:
  selector:
    k8s-app: kube-dns
  clusterIP:  {{ pillar['dns_server'] }}
  ports:
  - name: dns
    port: 53
    protocol: UDP
  - name: dns-tcp
    port: 53
    protocol: TCP
