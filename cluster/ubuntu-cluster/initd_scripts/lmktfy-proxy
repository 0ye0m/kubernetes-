#!/bin/sh
set -e

### BEGIN INIT INFO
# Provides:           lmktfy-proxy
# Required-Start:     $etcd
# Required-Stop:      
# Should-Start:       
# Should-Stop:        
# Default-Start:      
# Default-Stop:       
# Short-Description:  Start lmktfy-proxy service
# Description:
#  http://www.github.com/GoogleCloudPlatform/LMKTFY
### END INIT INFO

export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin:/opt/bin:

BASE=$(basename $0)

# modify these in /etc/default/$BASE (/etc/default/lmktfy-proxy)
LMKTFY_PROXY=/opt/bin/$BASE
# This is the pid file managed by lmktfy-proxy itself
LMKTFY_PROXY_PIDFILE=/var/run/$BASE.pid
LMKTFY_PROXY_LOGFILE=/var/log/$BASE.log
LMKTFY_PROXY_OPTS=""
LMKTFY_PROXY_DESC="LMKTFY-Proxy"

# Get lsb functions
. /lib/lsb/init-functions

if [ -f /etc/default/$BASE ]; then
	. /etc/default/$BASE
fi

# see also init_is_upstart in /lib/lsb/init-functions (which isn't available in Ubuntu 12.04, or we'd use it)
if [ -x /sbin/initctl ] && /sbin/initctl version 2>/dev/null | grep -q upstart; then
	log_failure_msg "$LMKTFY_PROXY_DESC is managed via upstart, try using service $BASE $1"
	exit 1
fi

# Check lmktfy-proxy is present
if [ ! -x $LMKTFY_PROXY ]; then
	log_failure_msg "$LMKTFY_PROXY not present or not executable"
	exit 1
fi

fail_unless_root() {
	if [ "$(id -u)" != '0' ]; then
		log_failure_msg "$LMKTFY_PROXY_DESC must be run as root"
		exit 1
	fi
}

LMKTFY_PROXY_START="start-stop-daemon \
--start \
--background \
--quiet \
--exec $LMKTFY_PROXY \
--make-pidfile --pidfile $LMKTFY_PROXY_PIDFILE \
-- $LMKTFY_PROXY_OPTS \
>> $LMKTFY_PROXY_LOGFILE 2>&1"

LMKTFY_PROXY_STOP="start-stop-daemon \
--stop \
--pidfile $LMKTFY_PROXY_PIDFILE"

case "$1" in
	start)
		fail_unless_root
		log_begin_msg "Starting $LMKTFY_PROXY_DESC: $BASE"
        $LMKTFY_PROXY_START
		log_end_msg $?
		;;

	stop)
		fail_unless_root
		log_begin_msg "Stopping $LMKTFY_PROXY_DESC: $BASE"
		$LMKTFY_PROXY_STOP
		log_end_msg $?
		;;

	restart | force-reload)
		fail_unless_root
		log_begin_msg "Stopping $LMKTFY_PROXY_DESC: $BASE"
		$LMKTFY_PROXY_STOP
		$LMKTFY_PROXY_START
		log_end_msg $?
		;;

	status)
		status_of_proc -p "$LMKTFY_PROXY_PIDFILE" "$LMKTFY_PROXY" "$LMKTFY_PROXY_DESC"
		;;

	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
		;;
esac
