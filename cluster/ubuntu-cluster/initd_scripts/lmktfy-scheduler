#!/bin/sh
set -e

### BEGIN INIT INFO
# Provides:           lmktfy-scheduler
# Required-Start:     $etcd
# Required-Stop:      
# Should-Start:       
# Should-Stop:        
# Default-Start:      
# Default-Stop:       
# Short-Description:  Start lmktfy-proxy service
# Description:
#  http://www.github.com/GoogleCloudPlatform/LMKTFY
### END INIT INFO

export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin:/opt/bin:

BASE=$(basename $0)

# modify these in /etc/default/$BASE (/etc/default/lmktfy-scheduler)
LMKTFY_SCHEDULER=/opt/bin/$BASE
# This is the pid file managed by lmktfy-scheduler itself
LMKTFY_SCHEDULER_PIDFILE=/var/run/$BASE.pid
LMKTFY_SCHEDULER_LOGFILE=/var/log/$BASE.log
LMKTFY_SCHEDULER_OPTS=""
LMKTFY_SCHEDULER_DESC="LMKTFY-Scheduler"

# Get lsb functions
. /lib/lsb/init-functions

if [ -f /etc/default/$BASE ]; then
	. /etc/default/$BASE
fi

# see also init_is_upstart in /lib/lsb/init-functions (which isn't available in Ubuntu 12.04, or we'd use it)
if [ -x /sbin/initctl ] && /sbin/initctl version 2>/dev/null | grep -q upstart; then
	log_failure_msg "$LMKTFY_SCHEDULER_DESC is managed via upstart, try using service $BASE $1"
	exit 1
fi

# Check lmktfy-scheduler is present
if [ ! -x $LMKTFY_SCHEDULER ]; then
	log_failure_msg "$LMKTFY_SCHEDULER not present or not executable"
	exit 1
fi

fail_unless_root() {
	if [ "$(id -u)" != '0' ]; then
		log_failure_msg "$LMKTFY_SCHEDULER_DESC must be run as root"
		exit 1
	fi
}

LMKTFY_SCHEDULER_START="start-stop-daemon \
--start \
--background \
--quiet \
--exec $LMKTFY_SCHEDULER \
--make-pidfile --pidfile $LMKTFY_SCHEDULER_PIDFILE \
-- $LMKTFY_SCHEDULER_OPTS \
>> $LMKTFY_SCHEDULER_LOGFILE 2>&1"

LMKTFY_SCHEDULER_STOP="start-stop-daemon \
--stop \
--pidfile $LMKTFY_SCHEDULER_PIDFILE"

case "$1" in
	start)
		fail_unless_root
		log_begin_msg "Starting $LMKTFY_SCHEDULER_DESC: $BASE"
        $LMKTFY_SCHEDULER_START
		log_end_msg $?
		;;

	stop)
		fail_unless_root
		log_begin_msg "Stopping $LMKTFY_SCHEDULER_DESC: $BASE"
		$LMKTFY_SCHEDULER_STOP
		log_end_msg $?
		;;

	restart | force-reload)
		fail_unless_root
		log_begin_msg "Restarting $LMKTFY_SCHEDULER_DESC: $BASE"
		$LMKTFY_SCHEDULER_STOP
		$LMKTFY_SCHEDULER_START
		log_end_msg $?
		;;

	status)
		status_of_proc -p "$LMKTFY_SCHEDULER_PIDFILE" "$LMKTFY_SCHEDULER" "$LMKTFY_SCHEDULER_DESC"
		;;

	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
		;;
esac
