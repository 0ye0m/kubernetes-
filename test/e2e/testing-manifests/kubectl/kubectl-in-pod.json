{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "kubectl-in-pod"
  },
  "spec": {
    "containers": [
      {
        "name": "curl",
        "image": "tutum/curl:trusty",
        "args": [
          "bash"
        ],
        "stdin": true,
        "stdinOnce": true,
        "tty": true,
        "volumeMounts": [{
          "mountPath": "/usr/local/bin/kubectl",
          "name": "kubectl"
        }]
      }
    ],
    "volumes": [{
      "name":"kubectl",
      "hostPath":{"path": "/usr/local/bin/kubectl"}
    }]
  }
}
