{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "fcpd"
    },
    "spec": {
        "containers": [
            {
                "name": "fcpd-ro",
                "image": "kubernetes/pause",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/fcpd",
                        "name": "fcpd-ro"
                    }
                ]
            },
            {
                "name": "fcpd-rw",
                "image": "kubernetes/pause",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/fcpd",
                        "name": "fcpd-rw"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "fcpd-ro",
                "fc": {
                    "targetWWNs": ["500a0982991b8dc5", "500a0982891b8dc5"],
                    "lun": 2,
                    "fsType": "ext4",
                    "readOnly": true
                }
            },
            {
                "name": "fcpd-rw",
                "fc": {
                    "targetWWNs": ["500a0982991b8dc5", "500a0982891b8dc5"],
                    "lun": 1,
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
