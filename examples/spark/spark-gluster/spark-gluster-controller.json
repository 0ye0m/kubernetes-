{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"sgc",
      "labels":{
         "name":"sgc"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "name":"sgc"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"sgc"
            }
         },
         "spec":{
            "containers": [{
             "name": "spark-worker",
             "privileged": true,
             "image": "mattf/spark-worker",
             "ports": [
             {
                "containerPort": 8088,
                "hostPort": 8888
             }
             ],
             "volumeMounts": [
              {
               "mountPath": "/mnt/glusterfs",
               "name": "glusterfsvol"
              }
             ]
           }],
           "volumes": [
             {
                "name": "glusterfsvol",
                "glusterfs": {
                  "endpoints": "glusterfs-cluster",
                  "path": "MyVolume",
                  "readOnly": false
                }
              }
            ]
         }
      }
   }
}
